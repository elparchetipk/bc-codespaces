{
  "name": "FastAPI Bootcamp - Optimized Free Tier",

  // 쯈U칄? Imagen base ultra-ligera de Python con Alpine Linux
  // 쯇OR QU칄? Alpine consume ~50% menos recursos que Debian/Ubuntu
  // 쯇ARA QU칄? Maximizar tiempo disponible en Codespaces Free Tier (120h/mes)
  "image": "python:3.13-alpine",

  // 쯈U칄? Caracter칤sticas adicionales del contenedor
  // 쯇OR QU칄? Docker-in-Docker permite containerizaci칩n avanzada
  // 쯇ARA QU칄? Aprender deployment y orquestaci칩n en la nube
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "dockerDashComposeVersion": "v2"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    }
  },

  // 쯈U칄? Configuraciones espec칤ficas de VS Code
  // 쯇OR QU칄? Extensiones esenciales para desarrollo Python profesional
  // 쯇ARA QU칄? Entorno de desarrollo completo y productivo
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        "ms-python.pylint",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-vscode.vscode-thunder-client"
      ],
      "settings": {
        "python.defaultInterpreterPath": "./venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        },
        "files.exclude": {
          "**/__pycache__": true,
          "**/*.pyc": true
        },
        // 쯈U칄? Configuraciones de optimizaci칩n de recursos para Free Tier
        // 쯇OR QU칄? Limitar recursos utilizados por VS Code en Codespaces
        // 쯇ARA QU칄? Maximizar tiempo disponible y performance del editor
        "workbench.editor.limit.enabled": true,
        "workbench.editor.limit.value": 1,
        "workbench.editor.limit.perEditorGroup": true,
        "workbench.editor.showTabs": "single",
        "workbench.editor.enablePreview": false,
        "workbench.editor.enablePreviewFromQuickOpen": false
      }
    },
    // 쯈U칄? Configuraci칩n espec칤fica para Codespaces
    // 쯇OR QU칄? Optimizar la experiencia espec칤ficamente en GitHub
    // 쯇ARA QU칄? Aprovechar todas las funcionalidades de Codespaces
    "codespaces": {
      "openFiles": ["README.md", "src/main.py"]
    }
  },

  // 쯈U칄? Comandos ejecutados al crear el contenedor
  // 쯇OR QU칄? Automatizar la configuraci칩n completa del entorno
  // 쯇ARA QU칄? Tener un ambiente listo para desarrollo inmediatamente
  "postCreateCommand": "chmod +x scripts/*.sh && ./scripts/setup-python-env.sh",

  // 쯈U칄? Puertos a exponer del contenedor
  // 쯇OR QU칄? FastAPI por defecto usa puerto 8000
  // 쯇ARA QU칄? Permitir acceso web a la aplicaci칩n en desarrollo
  "forwardPorts": [8000, 8080],
  "portsAttributes": {
    "8000": {
      "label": "FastAPI Server",
      "onAutoForward": "notify"
    }
  },

  // 쯈U칄? Configuraci칩n de comportamiento al pausar
  // 쯇OR QU칄? Optimizar el tiempo de reinicio en Codespaces
  // 쯇ARA QU칄? Gesti칩n eficiente de recursos del Free Tier
  "shutdownAction": "stopContainer",

  // 쯈U칄? Variables de entorno para el contenedor
  // 쯇OR QU칄? Configurar el entorno de desarrollo espec칤fico
  // 쯇ARA QU칄? Optimizar la experiencia de desarrollo Python
  "containerEnv": {
    "PYTHONPATH": "/workspaces/bc-codespaces/src",
    "PYTHONDONTWRITEBYTECODE": "1",
    "PYTHONUNBUFFERED": "1"
  },

  // 쯈U칄? Configuraci칩n de montajes del sistema de archivos
  // 쯇OR QU칄? Optimizar performance y persistencia de datos
  // 쯇ARA QU칄? Mejorar velocidad de desarrollo y I/O
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker-host.sock,type=bind"
  ],

  // 쯈U칄? Configuraci칩n de recursos del contenedor
  // 쯇OR QU칄? Optimizar para m치quinas de 2-core del Free Tier
  // 쯇ARA QU칄? Maximizar eficiencia y tiempo disponible
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "10gb"
  },

  // 쯈U칄? Comandos de ciclo de vida del contenedor
  // 쯇OR QU칄? Automatizar tareas repetitivas de desarrollo
  // 쯇ARA QU칄? Mejorar productividad y consistencia
  "postStartCommand": "echo '游 Codespace listo! Ejecuta: source venv/bin/activate'",

  // 쯈U칄? Usuario por defecto en el contenedor
  // 쯇OR QU칄? Evitar problemas de permisos con archivos
  // 쯇ARA QU칄? Simplificar la gesti칩n de archivos y Git
  "remoteUser": "root"
}
