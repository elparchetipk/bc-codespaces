{
  "name": "FastAPI Bootcamp - Working",

  // ¿QUÉ? Imagen base estable y compatible
  // ¿POR QUÉ? python:3.13-slim tiene bash y todas las herramientas necesarias
  // ¿PARA QUÉ? Evitar errores de configuración en Codespaces
  "image": "python:3.13-slim",

  // ¿QUÉ? Features esenciales simplificadas
  // ¿POR QUÉ? Configuración mínima para evitar conflictos
  // ¿PARA QUÉ? Setup rápido y confiable
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },

  // ¿QUÉ? VS Code optimizado para productividad
  // ¿POR QUÉ? Extensiones esenciales sin sobrecarga
  // ¿PARA QUÉ? Entorno de desarrollo eficiente
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "charliermarsh.ruff"
      ],
      "settings": {
        // ¿QUÉ? Una sola pestaña activa para evitar confusión
        // ¿POR QUÉ? Los estudiantes se enfocan mejor con menos distracciones
        // ¿PARA QUÉ? Mejorar la experiencia de aprendizaje
        "workbench.editor.limit.enabled": true,
        "workbench.editor.limit.value": 1,
        "workbench.editor.showTabs": "single",

        // ¿QUÉ? Configuración de Python
        // ¿POR QUÉ? Establecer intérprete por defecto
        // ¿PARA QUÉ? Desarrollo inmediato sin configuración manual
        "python.defaultInterpreterPath": "/workspaces/bc-codespaces/venv/bin/python",

        // ¿QUÉ? Formateo automático
        // ¿POR QUÉ? Código consistente y profesional
        // ¿PARA QUÉ? Mejores prácticas desde el inicio
        "python.formatting.provider": "black",
        "[python]": {
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": true
          }
        }
      }
    }
  },

  // ¿QUÉ? Setup automático del entorno Python
  // ¿POR QUÉ? Los estudiantes necesitan empezar inmediatamente
  // ¿PARA QUÉ? Evitar pérdida de tiempo en configuración
  "postCreateCommand": "python -m venv venv && . venv/bin/activate && pip install --upgrade pip && pip install -r requirements.txt",

  // ¿QUÉ? Shutdown automático para optimizar Free Tier
  // ¿POR QUÉ? Evitar consumo innecesario de horas gratuitas
  // ¿PARA QUÉ? Maximizar tiempo disponible para aprendizaje
  "shutdownAction": "stop"
}
